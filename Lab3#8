/*
8. Display arithmetic operator using switch case.
Output:
enter two numbers: 8 4
enter 1 for sum
2 for multiply
3 for subtraction
4 for division: 1
sum=12
Notice that “1” is your input from keyboard
*/

#include <stdio.h>

int main ()
{
	int a, b, num;
	
	printf ("Enter two numbers: \n");
	scanf ("%d%d", &a, &b);
	
	printf ("enter 1 for sum\n 2 for multiply\n 3 for substraction\n 4 for division\n");
	printf ("Please enter: ");
	
	scanf ("%d", &num);
	int sum, mul, sub;
	float div; 
	
	switch (num)
	{
	   case 1 : 
	   sum = a + b ;
	   printf ("Sum is %d", sum);
	   break;
	
	   case 2 :
	   mul = a * b ;
	   printf ("Multiply is %d", mul);
	   break;
	
	   case 3 :
	   sub = a - b ;
	   printf ("Substraction is %d", sub);
	   break;
	
	   case 4 :
	   div = (float)a / b ;
	   printf ("Division is %f", div);
	   break;
	
	   default : 
       printf ("Please enter valid input!\n");
    
	}  
	
	return 0;
}

/* result
Enter two numbers:
45 89
enter 1 for sum
 2 for multiply
 3 for substraction
 4 for division
Please enter: 4
Division is 0.505618
*/
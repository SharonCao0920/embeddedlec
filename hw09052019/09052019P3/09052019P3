#include <stdio.h>

int main ()
{   //delear variables
	int _prin, _rate, _time, _interest;
	
	
	//print instructions
	printf ("Enter principle, rate of interest & time to find simple interest:\n");
	
	//read intpus
	scanf ("%d%d%d", &_prin, &_rate, &_time);
	
	//calculate interest 
	_interest = _prin *((float) _rate/100)* _time;
	
	//print outputs
	printf ("Simple interest = %d\n", _interest);
	
	return 0;
}

/*
result:

Enter principle, rate of interest & time to find simple interest:                                                                                    
500                                                                                                                                                  
5                                                                                                                                                    
2                                                                                                                                                    
Simple interest = 50     
/
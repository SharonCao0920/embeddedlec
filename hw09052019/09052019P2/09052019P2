#include <stdio.h>

int main ()
{   //delear variables
	float rad, areaR, cirR; 
	float pie = 3.14;
	
	//print instruction
	printf ("Enter radius of a circle:");
	
	//read input
	scanf ("%f", &rad);
	
	//calculate
	areaR = pie * rad * rad;
	cirR = 2 * pie * rad;
	
	//print outputs
	printf ("Area of circle = %f\n", areaR);
	printf ("Cirsumference = %f" , cirR);
	
	return 0;
}

/*
result:
Enter radius of a circle:5                                                                                                                           
Area of circle = 78.500000                                                                                                                           
Cirsumference = 31.400002                                                                                                                            
*/                           
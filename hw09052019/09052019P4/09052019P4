#include <stdio.h>

int main ()
{   //delear variables
	float temp_f, temp_c;
	
	//print instructions
	printf ("enter temp in centigrade:\n");
	
	//read intpus
	scanf ("%f", &temp_c);
	
	//calculate interest 
	temp_f = (1.8 *temp_c)+32;
	
	//print outputs
	printf ("temp in Fahrenheit= %f", temp_f);
	
	return 0;
}

/*
result:
enter temp in centigrade:                                                                                                                            
32                                                                                                                                                   
temp in Fahrenheit= 89.599998  
/
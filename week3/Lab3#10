
/*
Filename: C Language W3

Description:
10.Print stars as following sequence on the monitor by loops

AUTHOR :    Sharon Cao         DATE :  09/17/2019 

*/

#include<stdio.h>

int main()
{
	int i,j;
    int max;
	int space;
	
    printf ("Enter an integer: ");
    scanf ("%d", &max);
    space = max-1;
	for(i=0;i< max;i++)
	{
		for(j=0;j< space;j++)
		{
			printf(" ");
		}
		for(j=0;j<=i;j++)
		{
			printf("* ");
		}
		
		printf("\n");
		space--;
	}
	/*repeat for lower part*/
	space=0;
	
	for(i=max;i>0;i--)
	{
	
		for(j=0;j< space;j++)
		{
			printf(" "); 
		}
		for(j=0;j< i;j++)
		{
			printf("* ");
		}
		
		printf("\n");
		space++;
	}
    return 0;
}
/*
clang version 7.0.0-3~ubuntu0.18.04.1 (tags/RELEASE_700/final)
 clang-7 -pthread -lm -o main main.c
 ./main
Enter an integer: 5
    *
   * *
  * * *
 * * * *
* * * * *
* * * * *
 * * * *
  * * *

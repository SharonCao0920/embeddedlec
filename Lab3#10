
/*
10.Print stars as following sequence on the monitor by loops
*/

#include<stdio.h>

int main()
{
	int i,j;
    int max;
	int space= max -1;
	
    printf ("Enter an integer: ");
    scanf ("%d", &max);

	/*run loop (parent loop) till number of rows*/
	for(i=0;i< max;i++)
	{
		/*loop for initially space, before star printing*/
		for(j=0;j< space;j++)
		{
			printf(" ");
		}
		for(j=0;j<=i;j++)
		{
			printf("* ");
		}
		
		printf("\n");
		space--;
	}
	/*repeat it again*/
	space=0;
	/*run loop (parent loop) till number of rows*/
	for(i=max;i>0;i--)
	{
		/*loop for initially space, before star printing*/
		for(j=0;j< space;j++)
		{
			printf(" "); 
		}
		for(j=0;j< i;j++)
		{
			printf("* ");
		}
		
		printf("\n");
		space++;
	}
    return 0;
}

/* result
Enter an integer: 7
      *
     * *
    * * *
   * * * *
  * * * * *
 * * * * * *
* * * * * * *
* * * * * * *
 * * * * * *
  * * * * *
   * * * *
    * * *
     * *
      *
*/